<Application x:Class="Sasha_Project.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sasha_Project"
             StartupUri="Views\MainWindow.xaml"
             xmlns:views="clr-namespace:Sasha_Project.Views"
             xmlns:viewsmodel="clr-namespace:Sasha_Project.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewsmodel:TableViewModel}">
            <views:TableView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewsmodel:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewsmodel:SettingRoomsViewModel}">
            <views:SettingsRoomView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewsmodel:SettingPrepodsViewModel}">
            <views:SettingPrepodsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
